{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Inventory Bulk Update Schema",
  "type": "object",
  "required": ["products"],
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["upsert", "replace", "partial"],
      "description": "Operation mode. 'upsert' (default) will create-or-update by SKU; 'partial' only updates provided fields; 'replace' replaces product/variants."
    },
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["variants"],
        "properties": {
          "id": { "type": "string" },
          "externalId": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "image": { "type": "string", "format": "uri" },
          "variants": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["sku"],
              "properties": {
                "sku": { "type": "string" },
                "name": { "type": "string" },
                "price": { "type": "number", "minimum": 0 },
                "stock": { "type": "integer", "minimum": 0 },
                "type": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
